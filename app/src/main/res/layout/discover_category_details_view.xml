<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.softment.thymbol.Utils.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                app:riv_corner_radius="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop"
                />
        </com.softment.thymbol.Utils.SquareLayout>
        <TextView
            android:maxLines="2"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemibold2"
            android:text="Gooney"
            android:textSize="12sp"
            android:textColor="@color/app_black"
            android:layout_marginTop="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            />
        <TextView
            android:lines="1"
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemibold2"
            android:text="Food &amp; Drink"
            android:textSize="11sp"
            android:textColor="@color/light_gray"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprobold2"
                android:text="50"
                android:textColor="@color/myellow"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/off"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfproregular2"
                android:text="% OFF"
                android:textColor="@color/light_gray"
                android:textSize="9sp"
                />
        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>
